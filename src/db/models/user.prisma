model User {
  id Int @id @unique @default(autoincrement())
  dni String @db.VarChar(15) @unique
  name String @db.VarChar(30)
  lastName String @db.VarChar(30) @map("lastname")
  birthdate DateTime @db.Date
  email String @unique
  phone String? @db.VarChar(15)
  password String
  recoveryToken String? @map("recovery_token")
  role String? @default("customer")
  createdAt DateTime @db.Timestamp() @default(now()) @map("created_at")
  updatedAt DateTime @db.Timestamp() @updatedAt @map("updated_at")

  bookings Booking[]

  @@map("users")
}
